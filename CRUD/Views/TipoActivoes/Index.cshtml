@model IEnumerable<CRUD.Models.TipoActivo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CuentaContableCompra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CuentaContableDepreciacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
        <td>
            @Html.DisplayFor(modelItem => item.CuentaContableCompra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CuentaContableDepreciacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
